html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title SMACSS presentation
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='styles/_base.css')
    link(rel='stylesheet', href='styles/_layout.css')
    link(rel='stylesheet', href='styles/_module.css')
    link(rel='stylesheet', href='styles/_state.css')
  body
    header
      .l-container.l-clearfix
        .header-title smacss presentation
        a.logo.l-align-left(href='index.html')
          img(src='img/logo.png')
        nav   
          ul.header-menu.hover-pointer
            li.header-menu__item home
            li.header-menu__item about us
              ul.header-menu__sub-menu
                li.header-menu__sub-menu__item team 
                li.header-menu__sub-menu__item location

    .l-container.l-container-centered.l-clearfix     

        .parts.parts--bicycle.parts--shadowed
          .parts-heading Bicycle parts
          .parts__item
            span.parts__item-name pedal
            span.parts__item-count  (5)
          .parts__item
            span.parts__item-name saddle
            span.parts__item-count  (1)
          .parts__item derailleur

        .parts.parts--car
          .parts-heading Car parts
          .parts__item gasoline tank
          .parts__item steering wheel
          .parts__item motor
            
    input.btn.btn--negative(value="-")   
    input.btn.btn--positive(value="+") 
    input.btn.btn--positive.btn--shadowed(value="+") 

    footer
      .l-container.l-container-centered.l-clearfix
        .icon
          img(src='img/floral120.png')
        .icon.icon--rounded
          img(src='img/floral121.png')
        .icon
          img(src='img/flower217.png')

    script(src='//localhost:35729/livereload.js')